set nocompatible

colorscheme  blue

set backup
set undofile

set hlsearch
set incsearch

set wildmenu

set mouse=a

set number
set showcmd
set cursorcolumn
set cursorline

highlight CursorLine ctermbg=Black 
highlight CursorColumn ctermbg=Black 

set autoindent

set tabstop=2
set shiftwidth=2
set expandtab

set backspace=indent,eol,start

set foldenable
set foldlevelstart=1
set foldmethod=indent
nnoremap <space> za

